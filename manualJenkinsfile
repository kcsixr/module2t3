pipeline {
    agent any

    parameters {
        choice(name: 'BRANCH_NAME', choices: ['main', 'dev'], description: 'Choose deployment environment')
        string(name: 'IMAGE_TAG', defaultValue: 'v1.0', description: 'Choose image tag for deployment')
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                script {
                    echo "Current Branch: ${env.BRANCH_NAME}"
                }
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

	stage('Build Docker Image') {
	    steps {
		script {
		    if (env.BRANCH_NAME == 'main') {
			echo "Building for main branch"
			sh 'cp src/main.svg public/logo.svg'
			sh "docker build -t nodemain:${env.IMAGE_TAG} ."
		    } else {
			echo "Building for ${env.BRANCH_NAME} branch"
			sh 'cp src/dev.svg public/logo.svg'
			sh "docker build -t nodedev:${env.IMAGE_TAG} ."
		    }
		}
	    }
	}



        stage('Deploy') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'main') {
                        echo "Deploying main branch"
                        sh 'docker run -d --name nodemain --rm -p 3000:3000 nodemain:${env.IMAGE_TAG}'
                    } else {
                        echo "Deploying ${env.BRANCH_NAME} branch"
                        sh 'docker run -d --name nodedev --rm -p 3001:3000 nodedev:${env.IMAGE_TAG}'
                    }
                }
            }
        }
    }
}
